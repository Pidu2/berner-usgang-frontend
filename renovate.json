{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "packageRules": [
    {
      "matchUpdateTypes": [
        "minor",
        "patch"
      ],
      "minimumReleaseAge": "5 days",
      "automerge": true,
      "automergeType": "branch",
      "ignoreTests": true
    }
  ]
}
